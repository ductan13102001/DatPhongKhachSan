<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbarTrackVertical="@drawable/ic_menu"
    tools:context=".Home_Activity">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/home_DrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/home_Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@android:color/holo_orange_light"></androidx.appcompat.widget.Toolbar>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/butHome_Loaiphong"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:hint="Hóa đơn phòng"
                        app:icon="@drawable/ic_house"
                        app:iconSize="70dp"
                        app:iconTint="#FFFFFF" />

                    <Button
                        android:id="@+id/butHome_Cachtinhtien"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:gravity="center"
                        android:hint="Sơ đồ phòng"
                        app:icon="@drawable/ic_memory"
                        app:iconSize="70dp" />

                    <Button
                        android:id="@+id/butHome_Phong"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:hint="Tồn kho"
                        app:icon="@drawable/ic_hotel"
                        app:iconSize="70dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewHDP"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Loại phòng"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewSDP"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Cách tính tiền"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewTK"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Phòng"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/butHome_Menu_Dichvu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:hint="Sản phẩm"
                        app:icon="@drawable/ic_fast_food"
                        app:iconSize="70dp"
                        app:iconTint="#FFFFFF" />

                    <Button
                        android:id="@+id/butHome_Taikhoanphu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:gravity="center"
                        android:hint="Bán chạy"
                        app:icon="@drawable/ic_accout_tree"
                        app:iconSize="70dp" />

                    <Button
                        android:id="@+id/butHome_Thietlapkhac"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:hint="Đặt phòng"
                        app:icon="@drawable/ic_perm_data_setting"
                        app:iconSize="70dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewSP"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Menu / Dịch vụ"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewBanChay"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Tài khoản phụ"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewDatPhong"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Thiết lập khác"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/butHome_Thongke"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:hint="Hiệu suất"
                        app:icon="@drawable/ic_view_kanban"
                        app:iconSize="70dp"
                        app:iconTint="#FFFFFF" />

                    <Button
                        android:id="@+id/butHome_Lichsu"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:gravity="center"
                        android:hint="Tổng doanh thu"
                        app:icon="@drawable/ic_text_snippet"
                        app:iconSize="70dp" />

                    <Button
                        android:id="@+id/butHome_Huongdan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:hint="Cơ sơ"
                        app:icon="@drawable/ic_video_library"
                        app:iconSize="70dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewHS"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Thống kê"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewTongDT"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Lịch sử"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewCoSo"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hướng dẫn"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>
            </LinearLayout>
        </LinearLayout>
        <!--        Tạo menu - layout_gravity: giúp chuyển menu sang bên trái-->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/home_NavigationViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <ListView
                android:id="@+id/home_ListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            </ListView>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>